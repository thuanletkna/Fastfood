
@{
    ViewBag.Title = "Khuyenmai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="blog_bg_area">
    <div class="container">
        <!--blog area start-->
        <div class="blog_page_section">
            <div class="row">
                <div class="col-lg-9 col-md-12">
                    <div class="blog_wrapper mb-60">
                        <div class="blog_header">
                            <h1>Tin tức khuyến mãi</h1>
                        </div>
                        <div class="blog_wrapper_inner">
                            @foreach (var item in Model)
                            {
                                <article class="single_blog">

                                    <figure>

                                        <div class="blog_thumb">
                                            <a href="@Url.Action("ChitietKM", "Khuyenmai", new { meta = item.MetaTitle })"><img src="/assets/home/img/discount/@item.Image" alt=""></a>
                                        </div>
                                        <figcaption class="blog_content">
                                            <h4 class="post_title"><a href="blog-details.html">@item.Name</a></h4>
                                            <div class="blog_meta">
                                                <span class="author">Posted by : <a href="#">Admin</a> / </span>
                                                <span class="meta_date">Posted on :  <a href="#">@item.CreatedDate</a></span>
                                            </div>
                                            <div class="blog_desc">
                                                <p>@item.Description</p>
                                            </div>
                                            <footer class="btn_more">
                                                <a href="@Url.Action("ChitietKM", "Home", new { meta = item.MetaTitle })"> Xem thêm</a>
                                            </footer>
                                        </figcaption>
                                    </figure>
                                </article>
                            }
                            </div>
                    </div>
                    <!--blog pagination area start-->
                    <div class="blog_pagination">
                        <div class="pagination">
                            <ul>
                                <li class="current">1</li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li class="next"><a href="#">next</a></li>
                                <li><a href="#">>></a></li>
                            </ul>
                        </div>
                    </div>
                    <!--blog pagination area end-->
                </div>
