
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login_page_bg">
    <div class="container">
        <div class="customer_login">
            <div class="row">
                <!--login area start-->
                <div class="col-lg-3 col-md-6"></div>
                <div class=" col-lg-6 colm_none ">
                    <div class="account_form login">
                        <h2>Quên mật khẩu</h2>
                        @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="signin-form">
                                @if (ViewBag.Message == "Tài khoản không tồn tại")
                                {
                                    <div class="text-danger" style="color:red">
                                        @ViewBag.Message
                                    </div>
                                }
                                else
                                {
                                    <div class="text-danger" style="color:green">
                                        @ViewBag.Message
                                    </div>
                                }
                                <br />

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <form>
                                    @Html.Label("Nhập Email", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <p>
                                        @Html.TextBox("emailID", "", new { @class = "form-control" })
                                    </p>
                                    <div>
                                        <input type="submit" value="Gửi" class="btn btn-default" />
                                    </div>
                                </form>
                            </div>
                        }
                    </div>
                </div>
                <!--login area start-->
                <!--register area start-->
                <!--register area end-->
            </div>
        </div>
    </div>
</div>

