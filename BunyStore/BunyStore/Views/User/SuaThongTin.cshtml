
@{
    ViewBag.Title = "SuaThongTin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main">
    <div class="panel-heading">  <h4 style="text-align:center">Thay đổi mật khẩu</h4></div>
    @using (Html.BeginForm("SuaThongTin", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="signin-form">
            @if (ViewBag.Message == "Tài khoản không tồn tại")
            {
                <div class="text-danger" style="color:red">
                    @ViewBag.Message
                </div>
            }
            else
            {
                <div class="text-danger" style="color:green">
                    @ViewBag.Message
                </div>
            }
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form>
                @Html.Label("Nhập Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.TextBox("emailID", "", new { @class = "form-control" })
                </div>
                <input type="submit" value="Gửi" class="btn btn-default" />
            </form>

        </div>
    }
</div>