@model List<KetnoiCSDL.EF.Menu>

@{
    var session =
   (BunyStore.Common.UserLogin)Session[BunyStore.Common.CommonConstants.USER_SESSION];
}
@if (session == null)
{

    <ul class="btn btn-success" style="background-color:#c40316;color:white;margin-right:30px">
        @foreach (var item in Model)
        {
            <li><a href="@item.Link">@item.Text</a></li>
        }
    </ul>
}
else
{
<div id="menu" class="text-left ">
    <ul class="offcanvas_main_menu">
        <li class="menu-item-has-children active">
            <span class="menu-expand"><i class="fa fa-angle-down"></i></span>
            <a href="index.html" class="btn btn-success" style="background-color:#c40316;color:white;margin-right:30px;">Xin chào:@session.Name</a>
            <ul class="sub_menu">
                <li><a href="@Url.Action("XemThongTin","User")">Xem thông tin</a></li>
                <li><a href="@Url.Action("XemThongTinDonHang", "user")">Kiểm tra đơn hàng</a></li>
                <li>@Html.ActionLink("Đăng xuất", "Logout", "User")</li>
            </ul>
        </li>
    </ul>
</div>
}


