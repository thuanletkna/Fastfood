                //});


                $('.txtQuantity').change(function () {
                    var list = $('.txtQuantity');
                    var cartList = [];
                    $.each(list, function (i, item) {
                        if ($(item).val() < 1) {
                            alert("Số lượng món phải lớn hơn 1")
                            $(item).val('1')
                            cartList.push({
                                Quantity: $(item).val(),
                                Product: {
                                    ID: $(item).data('id')
                                }
                            });
                        }
                        else if ($(item).val() > 99) {
                            alert("Số lượng tối đa mỗi món đặt trong 1 lần là 99")
                            $(item).val('99')
                            cartList.push({
                                Quantity: $(item).val(),
                                Product: {
                                    ID: $(item).data('id')
                                }
                            });
                        }
                        else {
                            cartList.push({
                                Quantity: $(item).val(),
                                Product: {
                                    ID: $(item).data('id')
                                }
                            });
                        }
                        $.ajax({
                            url: '/Cart/Update',
                            data: { cartModel: JSON.stringify(cartList) },
                            dataType: 'json',
                            type: 'POST',
                            success: function (res) {
                                if (res.status == true) {
                                    window.location.href = "/gio-hang"
                                }
                            }
                        });
                    });
                });


                //$('#btnUpdate').change(function () {
