        <dd>
            @Html.DisplayFor(model => model.ShowOnHome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA LOẠI" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ DANH SÁCH LOẠI SẢN PHẨM", "ProductCategory")
