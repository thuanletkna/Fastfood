@model BunyStore.Models.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login_page_bg">
    <div class="container">
        <div class="customer_login">
            <div class="row">
                <!--login area start-->
                <div class="col-lg-3 col-md-6"></div>
                <div class=" col-lg-6 colm_none ">
                    <div class="account_form login">
                        <h2>Tạo mật khẩu mới</h2>
                        @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="signin-form">
                                @if (ViewBag.Message == "Mật khẩu đã thay đổi thành công")
                                {
                                    <div class="text-danger" style="color:green">
                                        @ViewBag.Message
                                        <br />
                                        <a href="~/dang-nhap"> Đăng nhập </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-danger" style="color:red">
                                        @ViewBag.Message
                                    </div>
                                }
                                <br />
                                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                                <form>
                                    @Html.Label("Mật khẩu mới", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                    </div>
                                    @Html.Label("Xác nhận mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                    <div>
                                        @Html.HiddenFor(a => a.ResetCode)
                                    </div>
                                    <input type="submit" value="Xác nhận" class="btn btn-default" />
                                </form>
                                <div class="signin-text">
                                    <div class="text-left">
                                        <p><a href="~/dang-nhap"> Đăng nhập </a></p>
                                    </div>
                                    <div class="text-right">
                                        <p><a href="~/dang-ky"> Đăng ký tài khoản </a></p>
                                    </div>
                                    <div class="clear"> </div>
                                </div>
                                <h5>- Đăng nhập bằng tài khoản mạng xã hội -</h5>
                                <div class="social-icons">
                                    <ul>
                                        <li><a href="~/User/LoginFacebook"></a></li>
                                        <li><a href="#" class="fb"></a></li>
                                        <li><a href="#" class="be"></a></li>
                                        <li><a href="#" class="gg"></a></li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                           
